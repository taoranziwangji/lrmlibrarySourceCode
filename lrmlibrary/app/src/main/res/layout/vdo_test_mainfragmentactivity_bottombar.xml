<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_tab_bottom"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="#ffffff" >
    
    <ImageView 
        android:id="@+id/imv_main_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="#d6d6d6"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp" 
        android:background="#f0f0f0"
        android:layout_below="@+id/imv_main_line">

        <LinearLayout
            android:id="@+id/lin_tabbottom1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" 
            android:clickable="true">

            <ImageButton
                android:id="@+id/imv_tabbottom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_tabbottom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#ff0000" 
                android:clickable="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tabbottom2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" 
            android:clickable="true">

            <ImageButton
                android:id="@+id/imv_tabbottom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_tabbottom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次页"
                android:textColor="#000000" 
                android:clickable="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tabbottom3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true" >

            <ImageButton
                android:id="@+id/imv_tabbottom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_tabbottom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尾页" 
                android:textColor="#000000"
                android:clickable="false"/>
        </LinearLayout>

       
    </LinearLayout>

</RelativeLayout>